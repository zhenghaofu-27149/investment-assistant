.container {
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.field {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}

input, textarea {
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 10rpx;
}

.btn {
  background: #1a73e8;
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
}
